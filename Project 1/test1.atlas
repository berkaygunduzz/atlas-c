/* Declare and assign 0 to variables for input */
var x = 0;
var y = 0;
var z = 0;

/* Read input and assign to variables */
while ( x == 0 ) {
    out("Please enter x: ");
    x = in();
    if ( x == 0) {
        out("Please enter only non-zero values!");
    };
};

while ( y == 0 ) {
    out("Please enter y: ");
    y = in();
    if ( y == 0) {
        out("Please enter only non-zero values!");
    };
};

while ( z == 0 ) {
    out("Please enter z: ");
    z = in();
    if ( z == 0) {
        out("Please enter only non-zero values!");
    };
};

/* Calculate x times y times z and display it */
out("x * y * z = ", x * y * z);
